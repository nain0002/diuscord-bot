# RAGE:MP Roleplay Server - Environment Configuration
# Copy this file to .env and fill in your values

# ===================================
# DATABASE CONFIGURATION
# ===================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=ragemp_server
DB_PORT=3306

# ===================================
# SERVER CONFIGURATION
# ===================================
SERVER_NAME=My RAGE:MP Roleplay Server
SERVER_PORT=22005
MAX_PLAYERS=100

# ===================================
# ADMIN PANEL CONFIGURATION
# ===================================
ADMIN_PANEL_PORT=3000
ADMIN_PANEL_SECRET=change_this_secret_key_to_something_random

# ===================================
# WEBSOCKET BRIDGE (Admin Panel <-> Game Server)
# ===================================
WEBSOCKET_PORT=3001

# ===================================
# SESSION CONFIGURATION
# ===================================
SESSION_SECRET=change_this_to_a_random_string

# ===================================
# SECURITY SETTINGS
# ===================================
# Bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=10

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
# Set to 'development' or 'production'
NODE_ENV=production

# Enable debug logging
DEBUG=false

# ===================================
# NOTES
# ===================================
# 1. Never commit the .env file to version control
# 2. Make sure to change all SECRET values
# 3. Use strong passwords for database
# 4. Keep this file secure on your server
